{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "dev": { "dependsOn": ["^build"], "cache": false },
    "build": {
      "outputs": ["dist/**", ".next/**"]
    },
    "test": { "cache": false, "outputs": [] },
    "cov": { "cache": false, "outputs": [] },
    "type-check": { "cache": false, "outputs": [] },
    "lint": { "cache": false, "outputs": [] },
    "fmt": { "cache": false, "outputs": [] }
  }
}
